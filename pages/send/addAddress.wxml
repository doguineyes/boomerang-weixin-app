<!--pages/send/addAddress.wxml-->
<view class="address-info-box">
  <view wx:if="{{refer==='sender'}}">
    <text>寄件人信息</text>
  </view>
  <view wx:elif="{{refer==='recipient'}}">
    <text>收件人信息</text>
  </view>
  <view wx:else>
    <text>地址信息</text>
  </view>
  <van-cell-group>
    <van-field value="{{ name }}" clearable label="姓名" placeholder="请输入姓名" 
    bind:change="onNameChange" 
    bind:blur="onNameBlur" >
    </van-field>
    <van-field value="{{ mobile }}" clearable type="number" maxlength="11" label="手机号" placeholder="请输入手机号" 
    bind:change="onMobileChange" 
    bind:blur="onMobileBulr" >
    </van-field>
    <van-cell title="地区" is-link bind:click="onShowAreaPopup" value="{{ area }}" ></van-cell>
    <van-popup position="bottom" custom-class="area-popup" show="{{ showAreaPopup }}" bind:close="onCloseAreaPopup">
      <van-area area-list="{{ areaList }}" bind:confirm="onConfirmArea" value="{{ areaCode }}"/>
    </van-popup>
    <van-field value="{{ address }}" clearable label="详细地址" placeholder="" bind:change="onAddressChange" bind:blur="onAddressBlur" >
    </van-field>

  </van-cell-group>

  <van-button round custom-class="add-address-btn" bind:click="onSubmit">提交</van-button>
  <van-toast id="van-toast" />
</view>
