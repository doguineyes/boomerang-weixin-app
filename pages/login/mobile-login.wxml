<!--pages/login/mobile-login.wxml-->
<view>
  <ven-cell-group>
    <van-cell value="{{ mobile }}" title="手机号" clearable placeholder="请输入手机号" />
    <van-cell value="{{ smsVerificationCode }}" title="短信验证码" clearable placeholder="请输入手机号" >
      <van-button slot="right-icon" class="custom-icon">获取验证码</van-button>
    </van-cell>
  </ven-cell-group>
  <van-button block bindtap="onLoginClick">登陆</van-button>
</view>
