<!--pages/login/register.wxml-->
<view>
  <van-cell-group>
    <van-cell is-link title="国家与地区" value="{{ countryCode }}" link-type="navigateTo" url="/pages/login/area-code-picker" />
    <van-field value="{{ mobile }}" clearable type="number" label="手机号" maxlength="11" placeholder="请输入手机号" bind:change="onMobileChange" bind:blur="onMobileBlur" bind:focus="onMobileFocus" use-button-slot error-message="{{ mobileErrorMessage }}">
			<van-button custom-class="little-btn" slot="button" size="small" type="info" bind:click="onGetSmsVerificationCode" disabled="{{ disableGetSmsCodeBtn }}">
        验证码
        <view wx:if="{{countDown}}">
          {{countDown}}
        </view>
      </van-button>
		</van-field>
    <van-field value="{{ verifyCode }}" clearable type="number" label="短信验证码" placeholder="请输入验证码" bind:change="onVerifycodeChange" bind:blur="onVerifycodeBlur" bind:focus="onVerifyCodeFocus" error-message="{{ verifyCodeErrorMessage }}"/>
    <van-field value="{{ password }}" password label="密码" maxlength="50" placeholder="请输入密码" clearable error-message="{{ passwordErrorMessage }}" bind:change="onPasswordChange" bind:blur="onPasswordBlur" bind:focus="onPasswordFocus"/>
    <van-field value="{{ rePassword }}" password label="确认密码" maxlength="50" placeholder="请再次输入密码" clearable error-message="{{ rePasswordErrorMessage }}" bind:change="onRePasswordChange" bind:blur="onRePasswordBlur" bind:focus="onRePasswordFocus"/>
  </van-cell-group>
  <view class="footer-btn-box">
    <van-button custom-class="primary-btn" round bind:click="onSubmit">提交</van-button>
  </view>
  <van-toast id="van-toast" />
</view>
