<!--pages/login/register.wxml-->
<view>
  <van-cell-group>
    <van-cell is-link title="国家与地区" value="{{ countryCode }}" link-type="navigateTo" url="/pages/login/area-code-picker" />
    <van-field value="{{ mobile }}" clearable type="number" label="手机号" maxlength="11" placeholder="请输入手机号" bind:change="onMobileChange" bind:blur="onMobileBlur" use-button-slot error-message="{{ mobileErrorMessage }}">
			<van-button slot="button" size="small" type="info" bind:click="onGetSmsVerificationCode" disabled="{{ disableGetSmsCodeBtn }}">
        验证码
        <view wx:if="{{countDown}}">
          {{countDown}}
        </view>
      </van-button>
		</van-field>
    <van-field value="{{ verifyCode }}" clearable label="短信验证码" placeholder="请输入验证码" bind:change="onVerifycodeChange" bind:blur="onVerifycodeBlur" />
    <van-field value="{{ password }}" password label="密码" maxlength="50" placeholder="请输入密码" clearable error-message="{{ passwordErrorMessage }}" bind:change="onPasswordChange" bind:blur="onPasswordBlur" />
    <van-field value="{{ rePassword }}" password maxlength="50" label="确认密码" placeholder="请再次输入密码" clearable error-message="{{ rePasswordErrorMessage }}" bind:change="onRePasswordChange" bind:blur="onRePasswordBlur" />
  </van-cell-group>
  <van-button round bind:click="onSubmit">提交</van-button>
  <van-toast id="van-toast" />
</view>
